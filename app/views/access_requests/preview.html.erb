<h1 class="govuk-heading-xl">
  Preview access request
</h1>

<%= render partial: "access_request_api_result_banner_error" if flash[:notice] %>

<p class="govuk-body">
  If you made a mistake, you can <%= link_to "edit this access request",
    create_access_request_path(
      "emailed_access_request[requester_email]" => @emailed_access_request.requester_email,
      "emailed_access_request[target_email]" => @emailed_access_request.target_email,
      "emailed_access_request[first_name]" => @emailed_access_request.first_name,
      "emailed_access_request[last_name]" => @emailed_access_request.last_name,
    )
  %>.
</p>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <table class="govuk-table">
      <tbody class="govuk-table__body">
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">Requester email</th>
          <td class="govuk-table__cell "><%= @emailed_access_request.requester_email %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">Target email</th>
          <td class="govuk-table__cell "><%= @emailed_access_request.target_email %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">First name</th>
          <td class="govuk-table__cell "><%= @emailed_access_request.first_name %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row">Last name</th>
          <td class="govuk-table__cell "><%= @emailed_access_request.last_name %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>


<%= form_for @emailed_access_request, url: {action: "submit"} do |f| %>
  <%= f.hidden_field :requester_email %>
  <%= f.hidden_field :target_email %>
  <%= f.hidden_field :first_name %>
  <%= f.hidden_field :last_name %>

  <%= submit_tag "Approve", class: 'govuk-button' %>
<% end %>
